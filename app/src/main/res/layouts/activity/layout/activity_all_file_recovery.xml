<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.common.AllFileRecovery">

    <RelativeLayout
        android:id="@+id/layToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/a_500"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="All file recovery"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/btnSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_setting" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layToolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layLiner"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/clickPhoto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/weight_bg"
                    android:backgroundTint="@color/bgPhoto">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/a_500"
                        android:includeFontPadding="false"
                        android:text="Photo\nRecover"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="15dp"
                        android:src="@drawable/ic_photo" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/clickVideo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/weight_bg"
                    android:backgroundTint="@color/bgVideo">

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/a_500"
                        android:includeFontPadding="false"
                        android:text="Video\nRecover"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="15dp"
                        android:src="@drawable/ic_video" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/clickAudio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/weight_bg"
                    android:backgroundTint="@color/bgMusic">

                    <TextView
                        android:id="@+id/t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/a_500"


                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:text="Audio\nRecover"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="15dp"
                        android:src="@drawable/ic_music" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layLiner1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/layLiner"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/clickDocument"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/weight_bg"
                    android:backgroundTint="@color/bgDoc">

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="3dp"
                        android:fontFamily="@font/a_500"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:text="Document\nRecover"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="15dp"
                        android:src="@drawable/ic_file" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/clickContact"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/weight_bg"
                    android:backgroundTint="@color/bgContact">

                    <TextView
                        android:id="@+id/t5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"

                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/a_500"
                        android:includeFontPadding="false"


                        android:maxLines="2"
                        android:text="Contact\nRecover"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="15dp"
                        android:src="@drawable/ic_contact" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/clickRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/layLiner1"
                android:layout_margin="20dp"
                android:background="@drawable/weight_bg"
                android:backgroundTint="@color/bgRecycler">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_recycler" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/img1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/t6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/a_500"
                        android:includeFontPadding="false"
                        android:text="Recycle Bin"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/t7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/a_500"
                        android:includeFontPadding="false"
                        android:text="Deleted file are restores here"
                        android:textColor="#7E7E7E"
                        android:textSize="16sp" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/clickJunk"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/clickRecyclerView"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/weight_bg"
                android:backgroundTint="@color/bgJunk">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_junk" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/img2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/t8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/a_500"
                        android:includeFontPadding="false"
                        android:text="Junk Remover"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/t9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/a_500"
                        android:includeFontPadding="false"
                        android:text="Remover junk file here"
                        android:textColor="#7E7E7E"
                        android:textSize="16sp" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>