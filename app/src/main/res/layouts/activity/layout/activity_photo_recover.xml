<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.PhotoRecover">

    <RelativeLayout
        android:id="@+id/layToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/btnBack"
            android:fontFamily="@font/a_500"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Photo Recover"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layToolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layScanner"
                android:layout_width="250dp"
                android:background="@drawable/scnner_bg"
                android:layout_centerHorizontal="true"
                android:layout_height="250dp">

                <TextView
                    android:id="@+id/clickScan"
                    android:layout_width="wrap_content"
                    android:text="SCAN"
                    android:fontFamily="@font/a_700"
                    android:includeFontPadding="false"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <TextView
                android:layout_below="@+id/layScanner"
                android:id="@+id/textDescription"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:text="Tap to scan All Photos"
                android:fontFamily="@font/a_500"
                android:includeFontPadding="false"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>