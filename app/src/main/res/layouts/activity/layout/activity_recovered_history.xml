<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.storage.RecoveredHistory">

    <RelativeLayout
        android:id="@+id/layToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="33dp"
            android:layout_height="39dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_back" />


        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@id/clickDeleteImages"
            android:layout_toEndOf="@+id/btnBack"
            android:fontFamily="@font/a_500"
            android:gravity="start"
            android:includeFontPadding="false"
            android:text="Recover History"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/clickDeleteImages"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:src="@drawable/ic_recovery_delete" />

    </RelativeLayout>

    <!-- res/layout/activity_recover_history.xml -->
    <LinearLayout
        android:layout_below="@+id/layToolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorHeight="0dp"
            app:tabRippleColor="@android:color/transparent"
            app:tabGravity="start"
            app:tabMode="scrollable"
            android:background="@null"
            app:tabInlineLabel="true"
            style="?attr/tabStyle"
            android:clipToPadding="false"
            android:padding="0dp"
            android:layout_margin="0dp"
            app:tabPaddingStart="0dp"
            app:tabPaddingEnd="0dp"
            app:tabPadding="0dp"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>