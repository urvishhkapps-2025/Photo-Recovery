<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.storage.RecoverDetails">

    <RelativeLayout
        android:id="@+id/layToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="33dp"
            android:layout_height="39dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_back" />


        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@id/img"
            android:layout_toEndOf="@+id/btnBack"
            android:fontFamily="@font/a_500"
            android:gravity="start"
            android:includeFontPadding="false"
            android:text="All"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_title" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layToolbar">

        <TextView
            android:id="@+id/textSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:drawableEnd="@drawable/ic_down"
            android:drawablePadding="15dp"
            android:fontFamily="@font/a_500"
            android:gravity="end"
            android:includeFontPadding="false"
            android:text="All"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <RelativeLayout
            android:id="@+id/layCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textSort"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/a_500"
                android:gravity="end"
                android:includeFontPadding="false"
                android:text="Hide Low quality photos"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/btnSwitch"
                android:layout_width="54dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:showText="false"
                android:splitTrack="false"
                android:src="@drawable/ic_uncheck_t"
                app:thumbIcon="@null"
                app:useMaterialThemeColors="false" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layCheck"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbPhoto"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/custom_check_box"
                android:backgroundTint="@color/transparent_color"
                android:backgroundTintMode="src_atop"
                android:buttonTint="@color/transparent_color"
                android:includeFontPadding="false" />

            <TextView
                android:id="@+id/textAllSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/a_400"
                android:includeFontPadding="false"
                android:text="Select All Photos"
                android:textColor="@color/appColor"
                android:textSize="16dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layButton"
            android:layout_below="@+id/layAll"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp" />

        <LinearLayout
            android:id="@+id/layButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/clickRecover"
                android:layout_width="0dp"
                android:background="@drawable/btn_sec_bg"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/ic_turn"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textRecover"
                    android:layout_width="wrap_content"
                    android:text="Recover"
                    android:fontFamily="@font/a_400"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/clickDelete"
                android:layout_width="0dp"
                android:background="@drawable/btn_sec_bg"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/ic_delete"
                    android:layout_height="20dp"/>

                <TextView
                    android:id="@+id/textDelete"
                    android:layout_width="wrap_content"
                    android:text="Delete"
                    android:fontFamily="@font/a_400"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>