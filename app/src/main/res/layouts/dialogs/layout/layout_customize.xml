<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:elevation="10dp"
    card_view:cardCornerRadius="25dp"
    card_view:cardElevation="10dp">

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/tv_date_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/a_500"
                android:includeFontPadding="false"
                android:text="Date"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_new_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_date_new"
                android:layout_alignStart="@id/tv_date_new"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/a_500"
                android:includeFontPadding="false"
                android:text="(New to Old)"
                android:textColor="#7E7E7E"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_new"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/custom_radio_box"
                android:button="@null"
                android:clickable="false"
                android:focusable="false" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/tv_date_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/a_500"
                android:includeFontPadding="false"
                android:text="Date"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_old_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_date_old"
                android:layout_alignStart="@id/tv_date_old"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/a_500"
                android:includeFontPadding="false"
                android:text="(Old to New)"
                android:textColor="#7E7E7E"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_old"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/custom_radio_box"
                android:button="@null"
                android:clickable="false"
                android:focusable="false" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/tv_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/a_500"
                android:includeFontPadding="false"
                android:text="Size"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_small_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_size_small"
                android:layout_alignStart="@id/tv_size_small"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/a_500"
                android:includeFontPadding="false"
                android:text="(Small to Large)"
                android:textColor="#7E7E7E"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_small_large"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/custom_radio_box"
                android:button="@null"
                android:clickable="false"
                android:focusable="false" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/tv_size_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/a_500"
                android:includeFontPadding="false"
                android:text="Size"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_large_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_size_large"
                android:layout_alignStart="@id/tv_size_large"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/a_500"
                android:includeFontPadding="false"
                android:text="(Large to Small)"
                android:textColor="#7E7E7E"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_large_small"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/custom_radio_box"
                android:button="@null"
                android:clickable="false"
                android:focusable="false" />

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>